{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("vanmoofcraftymoltin\\craftymoltin\\assetbundles\\craftymoltin\\CraftyMoltinAsset") %}
{% do view.registerAssetBundle("vanmoofcraftymoltin\\craftymoltin\\assetbundles\\indexcpsection\\IndexCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/vanmoof/crafty-moltin/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "Crafty Moltin" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('crafty-moltin') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@vanmoofcraftymoltin/craftymoltin/assetbundles/indexcpsection/dist', true) ~ '/img/Index-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('crafty-moltin') }}</a>
    </div>
{% endset %}

{# The content of the CP Section#}
{% set content %}
    <h2>{{ "Index CP Section body goes here"|t('crafty-moltin') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
